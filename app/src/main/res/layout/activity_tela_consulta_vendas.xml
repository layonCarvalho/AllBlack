<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaVendas"
    android:background="@drawable/background_telas">

    <View
        android:id="@+id/containerdois"
        style="@style/Containerdois"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="239dp"
        android:layout_height="116dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/texto01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto6"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/containerdois"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/containerfiltros"
        style="@style/Containerinvisivel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerdois"
        />

    <TextView
        android:id="@+id/textofiltros"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Filtros por perÃ­odo:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/containerfiltros"
        />

    <Switch
        android:id="@+id/filtro1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="7 dias"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        app:layout_constraintStart_toStartOf="@id/containerfiltros"
        app:layout_constraintTop_toBottomOf="@id/textofiltros" />

    <Switch
        android:id="@+id/filtro2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="15 dias"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/filtro1"
        app:layout_constraintTop_toBottomOf="@id/textofiltros" />
    <Switch
        android:id="@+id/filtro3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="30 dias"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/filtro2"
        app:layout_constraintTop_toBottomOf="@id/textofiltros" />

    <View
        android:id="@+id/containerfiltrosb"
        style="@style/Containerinvisivel"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerfiltros"
        />

    <TextView
        android:id="@+id/textofiltrosb"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Filtros por produto:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/containerfiltrosb"
        />

    <Switch
        android:id="@+id/filtrob1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Pacote 2Kg"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        app:layout_constraintStart_toStartOf="@id/containerfiltrosb"
        app:layout_constraintTop_toBottomOf="@id/textofiltrosb" />

    <Switch
        android:id="@+id/filtrob2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Pacote 5Kg"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/filtrob1"
        app:layout_constraintTop_toBottomOf="@id/textofiltrosb" />
    <Switch
        android:id="@+id/filtrob3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Pacote 10Kg"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/filtrob2"
        app:layout_constraintTop_toBottomOf="@id/textofiltrosb" />

    <Switch
        android:id="@+id/filtrob4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Pacote 15Kg"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="100dp"
        app:layout_constraintStart_toStartOf="@id/containerfiltrosb"
        app:layout_constraintTop_toBottomOf="@id/filtrob1" />

    <Switch
        android:id="@+id/filtrob5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Pacote 10Kg"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/filtrob4"
        app:layout_constraintTop_toBottomOf="@id/filtrob2" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_aplicarfiltro"
        style="@style/Button_aplicarfiltro"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/aplicarfiltro"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/containerfiltrosb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/textodashboard"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="DASHBOARD"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_aplicarfiltro"
        />

    <ImageView
        android:id="@+id/graficoestoque"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/grafico_vendas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textodashboard"
        />


</android.support.constraint.ConstraintLayout>